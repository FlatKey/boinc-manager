@page
@model BoincManagerWeb.Pages.Hosts.AddModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>Host</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HostConnection.Name" class="control-label"></label>
                <input asp-for="HostConnection.Name" class="form-control" />
                <span asp-validation-for="HostConnection.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostConnection.IpAddress" class="control-label"></label>
                <input asp-for="HostConnection.IpAddress" class="form-control" />
                <span asp-validation-for="HostConnection.IpAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostConnection.Port" class="control-label"></label>
                <input asp-for="HostConnection.Port" class="form-control" value="@BoincManager.Constants.BoincDefaultPort" />
                <span asp-validation-for="HostConnection.Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostConnection.Password" class="control-label"></label>
                <input asp-for="HostConnection.Password" class="form-control" type="password" />
                <span asp-validation-for="HostConnection.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostConnection.AutoConnect" class="control-label"></label>
                <input asp-for="HostConnection.AutoConnect" class="form-control" value="true" />
                <span asp-validation-for="HostConnection.AutoConnect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
