@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div>
    <h4>Host Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MachineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MachineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkingSet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkingSet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OSDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OSDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OSArchitecture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OSArchitecture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FrameworkDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FrameworkDescription)
        </dd>
        <dt class="col-sm-2">
            SignalR
        </dt>
        <dd class="col-sm-10">
            <span id="signalRInfo"></span>
        </dd>
        <dt class="col-sm-2">
            Number of visitors on the site
        </dt>
        <dd class="col-sm-10">
            <span id="userNumber"></span>
        </dd>
    </dl>
</div>

<environment include="Development">
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/indexPage.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/indexPage.min.js"></script>
</environment>