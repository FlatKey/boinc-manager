@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div>
    <h4>Host Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.MachineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.MachineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.WorkingSet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.WorkingSet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.OSDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.OSDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.OSArchitecture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.OSArchitecture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.FrameworkDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.FrameworkDescription)
        </dd>
        <dt class="col-sm-2">
            SignalR
        </dt>
        <dd class="col-sm-10">
            <span id="signalRInfo"></span>
        </dd>
        <dt class="col-sm-2">
            Number of visitors on the page
        </dt>
        <dd class="col-sm-10">
            <span id="userNumber"></span>
        </dd>
    </dl>
</div>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            Message...<input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/boincinfo.js"></script>